---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  image: string | ImageMetadata;
  link?: string;
  delay?: number;
}

const { title, description, image, link, delay = 0 } = Astro.props;
---

<a 
  href={link} 
  class="group block bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-2"
  style={`animation: fade-in 0.5s ease-out forwards; animation-delay: ${delay}s; opacity: 0;`}
>
  <div class="w-full h-48 overflow-hidden">
    {
      typeof image === 'string' ? (
        <img 
          src={image} 
          alt={title} 
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110" 
        />
      ) : (
        <Image 
          src={image} 
          alt={title} 
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110" 
        />
      )
    }
  </div>
  <div class="p-6">
    <h3 
      class="text-2xl font-bold mb-3 text-primary-700 dark:text-white"
      transition:name={title}
    >
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-300 line-clamp-3">{description}</p>
  </div>
</a>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
