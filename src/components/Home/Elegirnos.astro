---
import Section from "../Section";
import { whyChooseUs } from "../../data/chooseUs";
import {
  HiUserGroup,
  HiLightBulb,
  HiShieldCheck,
  HiGlobeAlt,
} from "react-icons/hi";
import NatureCard from "../shared/NatureCard";

const icons = [HiUserGroup, HiLightBulb, HiShieldCheck, HiGlobeAlt];
---

<Section
  client:load
  title="¿Por Qué Elegirnos?"
  subtitle="Experiencia, dedicación y resultados comprobados"
  background="light"
>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
    {
      whyChooseUs.map((item, index) => {
        const Icon = icons[index];
        return (
          <NatureCard client:visible>
            {/* Contenedor del ícono */}
            <div class="w-16 h-16 bg-blue-100 dark:bg-primary-700 rounded-full flex items-center justify-center mb-6 text-primary dark:text-primary-200 group-hover:text-secondary transition-colors duration-300">
              <Icon size={32} className="relative z-10" />
            </div>

            {/* Título */}
            <h3 class="text-xl font-bold mb-3 text-primary-700 dark:text-white group-hover:text-secondary transition-colors duration-300 relative z-10">
              {item.title}
            </h3>

            <p class="text-gray-600 dark:text-gray-300 relative z-10">
              {item.description}
            </p>
          </NatureCard>
        );
      })
    }
  </div>

  <div class="max-w-4xl mx-auto text-center">
    <a
      href="/quienes-somos"
      class="inline-block bg-secondary hover:bg-secondary-600 text-white px-8 py-4 rounded-full font-semibold transition-all hover:scale-105 shadow-lg"
    >
      Conoce Nuestro Equipo
    </a>
  </div>
</Section>
