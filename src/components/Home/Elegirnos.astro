---
import Section from "../Section";
import { whyChooseUs } from "../../data/chooseUs";
import { HiUserGroup, HiLightBulb, HiShieldCheck, HiGlobeAlt } from "react-icons/hi";

const icons = [HiUserGroup, HiLightBulb, HiShieldCheck, HiGlobeAlt];
---

<Section
	client:load
	title="¿Por Qué Elegirnos?"
	subtitle="Experiencia, dedicación y resultados comprobados"
	background="light"
>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
		{
			whyChooseUs.map((item, index) => {
				const Icon = icons[index];
				return (
					<div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 flex flex-col items-center text-center h-full">
						<div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mb-6 text-primary dark:text-primary-500">
							<Icon size={32} />
						</div>
						<h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">
							{item.title}
						</h3>
						<p class="text-gray-600 dark:text-gray-300">
							{item.description}
						</p>
					</div>
				);
			})
		}
	</div>

	<div class="max-w-4xl mx-auto text-center">
		<a
			href="/quienes-somos"
			class="inline-block bg-primary hover:bg-primary-700 text-white px-8 py-4 rounded-full font-semibold transition-all hover:scale-105 shadow-lg"
		>
			Conoce Nuestro Equipo
		</a>
	</div>
</Section>