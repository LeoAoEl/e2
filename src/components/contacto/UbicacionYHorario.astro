---
import Section from "../Section";
---

<Section
  ifBg
  bgImage="https://images.pexels.com/photos/35196/water-plant-green-fine-layers.jpg"
  client:load
  title="Ubicación y Horarios"
  subtitle="Visítanos o contáctanos en nuestros horarios de atención"
  background="light"
>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-stretch">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 h-full">
      <h3 class="text-2xl font-bold text-primary-700 dark:text-white mb-6">
        Horarios de Atención
      </h3>
      <div class="space-y-4">
        <div
          class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-3"
        >
          <span class="font-semibold text-primary-700 dark:text-white"
            >Lunes - Viernes</span
          >
          <span class="text-gray-600 dark:text-gray-300">9:00 AM - 6:00 PM</span
          >
        </div>
        <div
          class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-3"
        >
          <span class="font-semibold text-primary-700 dark:text-white"
            >Sábado</span
          >
          <span class="text-gray-600 dark:text-gray-300"
            >10:00 AM - 2:00 PM</span
          >
        </div>
        <div class="flex justify-between">
          <span class="font-semibold text-primary-700 dark:text-white"
            >Domingo</span
          >
          <span class="text-gray-600 dark:text-gray-300">Cerrado</span>
        </div>
      </div>

      <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
        <h4 class="font-bold text-primary-700 dark:text-white mb-2">
          Dirección
        </h4>
        <p class="text-gray-600 dark:text-gray-300">
          Paseo de Varsovia 4513<br />
          Las Torres, Nuevo León
        </p>
      </div>
    </div>

    <div class="h-full min-h-[400px] rounded-xl overflow-hidden shadow-xl">
      <iframe
        src={"https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d899.422249488607!2d-100.27813997149133!3d25.615248698584384!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8662bf6c252be897%3A0xd15448fbd8cfdddd!2sP.%C2%BA%20de%20Varsovia%204513%2C%20Las%20Torres%2C%2064930%20Monterrey%2C%20N.L.!5e0!3m2!1ses-419!2smx!4v1767811300680!5m2!1ses-419!2smx"}
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Ubicación de nuestra oficina"
        class="w-full h-full"></iframe>
    </div>
  </div>
</Section>
