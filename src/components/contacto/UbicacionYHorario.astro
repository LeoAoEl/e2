---
import Section from "../Section";
---

<Section
	client:load
	title="Ubicación y Horarios"
	subtitle="Visítanos o contáctanos en nuestros horarios de atención"
	background="light"
>
	<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-stretch">
		<!-- Horario Column -->
		<div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 h-full">
			<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Horarios de Atención</h3>
			<div class="space-y-4">
				<div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-3">
					<span class="font-semibold text-gray-900 dark:text-white">Lunes - Viernes</span>
					<span class="text-gray-600 dark:text-gray-300">9:00 AM - 6:00 PM</span>
				</div>
				<div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-3">
					<span class="font-semibold text-gray-900 dark:text-white">Sábado</span>
					<span class="text-gray-600 dark:text-gray-300">10:00 AM - 2:00 PM</span>
				</div>
				<div class="flex justify-between">
					<span class="font-semibold text-gray-900 dark:text-white">Domingo</span>
					<span class="text-gray-600 dark:text-gray-300">Cerrado</span>
				</div>
			</div>
			
			<div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
				<h4 class="font-bold text-gray-900 dark:text-white mb-2">Dirección</h4>
				<p class="text-gray-600 dark:text-gray-300">
					Calle Principal 123<br />
					Monterrey, Nuevo León
				</p>
			</div>
		</div>

		<!-- Map Column -->
		<div class="h-full min-h-[400px] rounded-xl overflow-hidden shadow-xl">
			<iframe
				src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d230187.65318127742!2d-100.47456659508248!3d25.648674971921906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86629531b437f8f5%3A0xa3d3d3ca6ac89894!2sMonterrey%2C%20N.L.!5e0!3m2!1ses-419!2smx!4v1764827882336!5m2!1ses-419!2smx"
				width="100%"
				height="100%"
				style="border:0;"
				allowfullscreen=""
				loading="lazy"
				referrerpolicy="no-referrer-when-downgrade"
				title="Ubicación de nuestra oficina"
				class="w-full h-full"
			></iframe>
		</div>
	</div>
</Section>
