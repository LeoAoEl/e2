---
import Section from "../Section";
---

<Section
		client:load
		title="Horarios de Atención"
		subtitle="Estamos disponibles cuando lo necesites"
		background="light"
	>
		<div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8">
			<div class="space-y-4">
				<div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-3">
					<span class="font-semibold text-gray-900 dark:text-white">Lunes - Viernes</span>
					<span class="text-gray-600 dark:text-gray-300">9:00 AM - 6:00 PM</span>
				</div>
				<div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-3">
					<span class="font-semibold text-gray-900 dark:text-white">Sábado</span>
					<span class="text-gray-600 dark:text-gray-300">10:00 AM - 2:00 PM</span>
				</div>
				<div class="flex justify-between">
					<span class="font-semibold text-gray-900 dark:text-white">Domingo</span>
					<span class="text-gray-600 dark:text-gray-300">Cerrado</span>
				</div>
			</div>
		</div>
	</Section>