---
import { history, type HistoryContent } from "../../data/historia";
---

<div class="max-w-4xl mx-auto">
  <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
    {history.body}
  </p>
  <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mb-6">
    {history.p1}
  </p>
  <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
    {history.p2}
    <br />
    <span class="font-bold text-secondary">
      {history.p3}
    </span>
  </p>
  <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mt-6">
    {history.p4}
  </p>
  <p
    class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mt-6 font-semibold"
  >
    {history.p5}
  </p>
</div>
