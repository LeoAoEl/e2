---
import { FaFacebook, FaTwitter, FaInstagram, FaLinkedin } from "react-icons/fa";
import LogoW from "../assets/images/LogoW.svg";
---

<footer class="bg-slate-950 dark:bg-black text-white mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-center md:text-left"
    >
      <div class="flex flex-col items-center md:items-start">
        <img
          src={LogoW.src}
          alt="E2 Estrategias Patrimoniales"
          class="w-80 mb-4"
        />
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Enlaces Rápidos</h3>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-gray-400 hover:text-white transition-colors"
              >Inicio</a>
          </li>
          <li>
            <a
              href="/que-hacemos"
              class="text-gray-400 hover:text-white transition-colors"
              >Qué Hacemos</a>
          </li>
          <li>
            <a
              href="/quienes-somos"
              class="text-gray-400 hover:text-white transition-colors"
              >Quiénes Somos</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Servicios</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="/eventos"
              class="text-gray-400 hover:text-white transition-colors"
              >Eventos</a>
          </li>
          <li>
            <a
              href="/blog"
              class="text-gray-400 hover:text-white transition-colors">Blog</a>
          </li>
          <li>
            <a
              href="/contacto"
              class="text-gray-400 hover:text-white transition-colors"
              >Contáctanos</a>
          </li>
        </ul>
      </div>

      <div class="lg:text-right">
        <h3 class="text-xl font-bold mb-4">Síguenos</h3>
        <div
          class="flex space-x-4 justify-center md:justify-start lg:justify-end"
        >
          <a
            target="_blank"
            href="https://www.facebook.com/profile.php?id=100064020670436"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Facebook"
          >
            <FaFacebook size={24} />
          </a>
          <a
            target="_blank"
            href="https://www.instagram.com/e2estrategiaspatrimoniales/"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Instagram"
          >
            <FaInstagram size={24} />
          </a>
          <a
            target="_blank"
            href="#"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <FaLinkedin size={24} />
          </a>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>
        &copy; {new Date().getFullYear()}
        <a
          href="https://www.optimmkt.com/"
          target="_blank"
          class="text-gray-400 hover:text-white transition-colors">Optim MKT</a
        >. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
