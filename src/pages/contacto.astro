---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import Section from '../components/Section';
import ContactForm from '../components/ContactForm';
import { HiMail, HiPhone, HiLocationMarker } from 'react-icons/hi';
import Form from '../components/Form';
---

<Layout title="Contáctanos - E2STRATEGIAS PATRIMONIALES" description="Ponte en contacto con nuestro equipo">
	<Hero
		client:load
		title="Contáctanos"
		subtitle="¿Tienes preguntas? Estamos a tu entera disposición"
		imageSrc="https://images.pexels.com/photos/3184435/pexels-photo-3184435.jpeg?auto=compress&cs=tinysrgb&w=1920"
	/>

	<Section
		client:load
		title="Información de Contacto"
		subtitle="Múltiples formas de comunicarte con nosotros"
		background="light"
	>
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
			<div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
				<div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full mb-4">
					<HiMail client:load size={32} className="text-primary dark:text-primary-500" />
				</div>
				<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">Email</h3>
				<a href="mailto:info@ejemplo.com" class="text-primary dark:text-primary-500 hover:underline">
					info@ejemplo.com
				</a>
			</div>

			<div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
				<div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full mb-4">
					<HiPhone client:load size={32} className="text-primary dark:text-primary-500" />
				</div>
				<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">Teléfono</h3>
				<a href="tel:+34123456789" class="text-primary dark:text-primary-500 hover:underline">
					+52 123 456 789
				</a>
			</div>

			<div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
				<div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full mb-4">
					<HiLocationMarker client:load size={32} className="text-primary dark:text-primary-500" />
				</div>
				<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">Ubicación</h3>
				<p class="text-gray-600 dark:text-gray-300">
					Calle Principal 123<br />Mazatlan, Sinaloa
				</p>
			</div>
		</div>
	</Section>

	<Form client:load />

	<Section
		client:load
		title="Encuéntranos"
		subtitle="Visítanos en nuestra oficina"
		background="light"
	>
		<div class="aspect-video rounded-xl overflow-hidden shadow-2xl">
			<iframe
				src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3037.4239167613224!2d-3.7037902!3d40.4167754!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd422997800a3c81%3A0xc436dec1618c2269!2sMadrid%2C%20Spain!5e0!3m2!1sen!2s!4v1234567890123!5m2!1sen!2s"
				width="100%"
				height="100%"
				style="border:0;"
				allowfullscreen=""
				loading="lazy"
				referrerpolicy="no-referrer-when-downgrade"
				title="Ubicación de nuestra oficina"
			></iframe>
		</div>
	</Section>
</Layout>
